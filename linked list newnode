#include <stdio.h>
#include <stdlib.h>

struct node
{
    int data;
    struct node *next;
}*head;

void cretelist()
{
    printf("Enter Node count :\n");
    int n;
    scanf("%d",&n);
    struct node *newnode, *temp;
    printf("Enter the value of node-1\n");
    head = (struct node*) malloc(sizeof(struct node));
    scanf("%d", &head->data);
    head->next=NULL;
    temp=head;
    for(int i=1; i<=n-1; i++)
    {
        newnode = (struct node*) malloc(sizeof(struct node));
        printf("Enter the value of node-%d\n", i+1);
        scanf("%d", &newnode->data);
        newnode->next=NULL;
        temp->next=newnode;
        temp=newnode;
    }
}

void display()
{
    struct node *temp;
    temp=head;
    int i=0;
    while(temp!=NULL)
    {
        printf("Node-%d: %d\n", ++i, temp->data);
        temp=temp->next;
    }
}

void searchlist()
{
    int searchitem;
    printf("Enter search item\n");
    scanf("%d",&searchitem);
    struct node *temp = head;
    int index =0;
    while(temp != NULL)
    {
        if(temp->data==searchitem)
        {
            printf("Found at index : %d\n",index+1);
            break;
        }
        else
        {
            temp=temp->next;
            index++;
        }
    }
    if(temp==NULL) printf("NOT Found\n");

}

int main()
{
    cretelist();
    display();
    searchlist();
    return 0;
}
